@using EntityLayer.Concrete
@model List<Feature>

<div class="best-rooms py-5">
    <div class="container py-md-5">
        <div class="ban-content-inf row">
            <div class="maghny-gd-1 col-lg-6">                
                    <div class="maghny-grid">
                        <figure class="effect-lily border-radius  m-0">
                            <img class="img-fluid" src="@Model[4].Image" alt="" />
                            <figcaption>
                                <div>
                                    <h4>@Model[1].Title</h4>
                                    <p>Başlangıç Fiyatı : @Model[1].Description </p>
                                </div>
                            </figcaption>
                        </figure>
                    </div>                
            </div>
            <div class="maghny-gd-1 col-lg-6 mt-lg-0 mt-4">
                <div class="row">
                    @for (var i = 1; i <= 2; i++)
                    {
                        <div class="maghny-gd-1 col-6">
                            <div class="maghny-grid">
                                <figure class="effect-lily border-radius">
                                    <img class="img-fluid" src="@Model[i].Image" alt="" />
                                    <figcaption>
                                        <div>
                                            <h4>@Model[i].Title</h4>
                                            <p>Başlangıç fiyatı : @Model[i].Description </p>
                                        </div>
                                         
                                    </figcaption>
                                </figure>
                            </div>
                        </div>
                    }
                    @for (var i = 3; i <= 4; i++)
                    {
                        <div class="maghny-gd-1 col-6 mt-4">
                            <div class="maghny-grid">
                                <figure class="effect-lily border-radius">
                                    <img class="img-fluid" src="@Model[i].Image" alt="" />
                                    <figcaption>
                                        <div>
                                            <h4>@Model[i].Title</h4>
                                            <p>Başlangıç fiyatı : @Model[i].Description</p>
                                        </div>

                                    </figcaption>
                                </figure>
                            </div>
                        </div>
                    }                 
                </div>
            </div>
        </div>
    </div>
</div>